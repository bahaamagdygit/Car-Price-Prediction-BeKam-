<div class="modal fade " id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->

        <div class="modal-content" style=" background: rgba(0,0,0,0);">
            <div class="modal-header" style="border-bottom: none">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body" style=" background: rgba(0,0,0,0);">


                <div class="pop_up_reg" id="pop_up_reg">
                    <div class="form-pop_up_reg sign-up-pop_up_reg">

                        <form class="pop_form" action="#">
                            <h1>Create Account</h1>
                            <div class="social-pop_up_reg">
                                <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                                <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                            </div>
                            <span>or use your email for registration</span>
                            <input class="log" type="text" placeholder="Name" />
                            <input class="log" type="email" placeholder="Email" />
                            <input class="log" type="password" placeholder="Password" />
                            <button class="btn btn-outline-info px-3">Sign Up</button>
                        </form>
                    </div>
                    <div class="form-pop_up_reg sign-in-pop_up_reg">

                        <form class="pop_form" action="#">
                            <h1>Sign in</h1>
                            <div class="social-pop_up_reg">
                                <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                                <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                            </div>
                            <span>or use your account</span>
                            <input class="log" type="email" placeholder="Email" />
                            <input class="log" type="password" placeholder="Password" />
                            <a href="#">Forgot your password?</a>
                            <button class=" btn btn-outline-success px-3">Sign In</button>
                        </form>

                    </div>
                    <div class="overlay-pop_up_reg">
                        <div class="overlay">
                            <div class="overlay-panel overlay-left">
                                <img src="~/img/Log(in-up)/reg.png" style="height:200px; width:auto;" />
                                <p>To keep connected with us please login with your personal info</p>
                                <button class="btn btn-outline-warning px-3" id="signIn">Sign In</button>
                            </div>
                            <div class="overlay-panel overlay-right">

                                <img src="~/img/Log(in-up)/login.png" style="height:200px; width:auto;" />

                                <p>Enter your personal details and start journey with us</p>
                                <button class="btn btn-outline-warning px-3" id="signUp">Sign Up</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


<script>
    const signUpButton = document.getElementById('signUp');
    const signInButton = document.getElementById('signIn');
    const pop_up_reg = document.getElementById('pop_up_reg');

    signUpButton.addEventListener('click', () => {
        pop_up_reg.classList.add("right-panel-active");
    });

    signInButton.addEventListener('click', () => {
        pop_up_reg.classList.remove("right-panel-active");
    });
</script>