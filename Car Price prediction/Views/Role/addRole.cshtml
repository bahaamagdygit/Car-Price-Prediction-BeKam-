
@{
    ViewBag.Title = "Add Role";
    ViewBag.icon = "Add_Role.png";
}

<style>
    .add_btn {
    text-align:center;
    
    }
    .addrole_btn {
        margin: 20px;
        padding-right: 30px;
        padding-left: 30px;
        height: 50px;
        width: 140px;
        background-color: #0a0a23;
        color: #fff;
        border: none;
        border-radius: 10px;
        box-shadow: 0px 0px 2px 2px rgb(0,0,0);
    }
</style>
<div style="text-align:center">
    <center>
        @using (Html.BeginForm())
        {
            <div class="container" style=" margin-top: 8%; width: 50%; margin: 25PX; ">
                <h2>Add New Role</h2>
                <input type="text" name="RoleName" value="" class="fas font-family: 'FontAwesome' form-control _ge_de_ol text-box single-line"
                       data-val="true" data-val-maxlength="The field User Name must be a string or array type with a maximum length of '30'."
                       data-val-maxlength-max="30" data-val-required="Please enter name" placeholder="Add  New Role " />

            </div>
            <div class="add_btn">
                <input type="submit" name="" value="Add" class="addrole_btn" />
            </div>

        }
    </center>
  
</div>