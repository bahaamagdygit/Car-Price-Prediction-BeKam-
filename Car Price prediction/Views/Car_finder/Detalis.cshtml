@model Car_Price_prediction.Models.Cars

@{ ViewBag.Title = "Detalis";
ViewBag.icon = "Detalis.png"; }


<body>
    <!-- Page Header Start -->
    <div class="container-fluid page-header">
        <h1 class="display-3 text-uppercase text-white mb-3">Detalis</h1>
    </div>
    <!-- Page Header Start -->
    <!-- Contact Start -->
    <div class="container-fluid py-5">
        <div class="container pt-5 pb-3">
            <div class="col-lg-10 text-center" style="max-width:100%;">
                <img class="w-45 mb-4" src="~/img/Car_Image/@ViewBag.img" alt="@ViewBag.img" style="width:50%; height:auto; position:center;">
            </div>
            <h1 class="display-4 text-uppercase text-center mb-5"> @Html.DisplayFor(model => model.Brand)</h1>
            <br />




            <div class="container-fluid py-5">
                <div class="container pt-5 pb-3">





                    <div class="container-xxl service py-5">
                        <div class="container">
                            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">

                                <h1 class="mb-5">Detalis</h1>
                            </div>
                            <div class="row g-4 wow fadeInUp" data-wow-delay="0.3s">
                                <div class="col-lg-4">
                                    <div class="nav w-100 nav-pills me-4">

                                        <button class="nav-link w-100 d-flex align-items-center text-start p-3 mb-4 active border-0 rounded " data-toggle="pill" href="#tab-pane-1" type="button" role="tab">
                                            <i class="fa fa-car fa-2x me-3"></i>
                                            <h4 class="ml-3 ">Main vehicle information</h4>
                                        </button>

                                        <button class="nav-link w-100 d-flex align-items-center text-start p-3 mb-4 border-0 rounded" data-toggle="pill" href="#tab-pane-2" type="button" role="tab">
                                            <i class="fa fa-user fa-2x me-3"></i>
                                            <h4 class="ml-3">User information</h4>
                                        </button>

                                        <button class="nav-link w-100 d-flex align-items-center text-start p-3 mb-4 border-0 rounded" data-toggle="pill" href="#tab-pane-3" type="button" role="tab">
                                            <i class="fa fa-cog fa-2x me-3"></i>
                                            <h4 class="ml-3">Technical information</h4>
                                        </button>

                                        <button class="nav-link w-100 d-flex align-items-center text-start p-3 mb-0 border-0 rounded" data-toggle="pill" href="#tab-pane-4" type="button" role="tab">
                                            <i class="fas fa-oil-can fa-2x me-3"></i>
                                            <h4 class="ml-3">fuel information</h4>
                                        </button>

                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="tab-content w-100">
                                        <div class="tab-pane fade show active" id="tab-pane-1">
                                            <div class="row g-4">
                                                <div class="col-md-6" style="min-height: 350px;">
                                                    <div class="position-relative h-100">


                                                        <div class="row">


                                                            <div class="col text-center">
                                                                <a target="_blank" href="~/img/Car_Image/@ViewBag.img" alt="@ViewBag.img">
                                                                    <img class="img-fluid mb-1 " src="~/img/Car_Image/@ViewBag.img" alt="@ViewBag.img" style="width: 350px ; height: auto;">
                                                                </a>
                                                            </div>

                                                        </div>



                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <h3 class="mb-3">@Html.DisplayFor(model => model.Brand) @Html.DisplayFor(model => model.Model) @Html.DisplayFor(model => model.Year)</h3>
                                                    <p class="mb-4">@Html.DisplayFor(model => model.Discription)</p>
                                                    <p><i class="fa fa-check text-success me-3"></i> <b class="text-danger">Car Brand:</b> @Html.DisplayFor(model => model.Brand) <b class="text-danger ml-1"> Model :</b> @Html.DisplayFor(model => model.Model)</p>
                                                    <p><i class="fa fa-check text-success me-3"></i><b class="text-danger">Year:</b> @Html.DisplayFor(model => model.Year)</p>
                                                    <p><i class="fa fa-check text-success me-3"></i><b class="text-danger">Price:</b> @Html.DisplayFor(model => model.Price) EGP</p>
                                                    <p><i class="fa fa-check text-success me-3"></i><b class="text-danger">Car Model:</b> @Html.DisplayFor(model => model.Model)</p>
                                                    <a href="" class="btn btn-primary py-3 px-5 mt-3">Read More<i class="fa fa-arrow-right ml-3"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="tab-pane-2">
                                            <div class="row g-4">
                                                <div class="col-md-6" style="min-height: 350px;">
                                                    <div class="position-relative h-100">


                                                        <div class="row">


                                                            <div class="col text-center">
                                                                <a target="_blank" href="~/img/Car_Image/@ViewBag.img" alt="@ViewBag.img">
                                                                    <img class="img-fluid mb-1 " src="~/img/Car_Image/@ViewBag.img" alt="@ViewBag.img" style="width: 350px; height: auto;">
                                                                </a>
                                                            </div>

                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <h3 class="mb-3">@Html.DisplayFor(model => model.Brand) @Html.DisplayFor(model => model.Model) @Html.DisplayFor(model => model.Year)</h3>
                                                    <p class="mb-4">@Html.DisplayFor(model => model.Discription)</p>


                                                    <p><i class="fa fa-check text-success me-3"></i><b class="text-danger">Transmission:</b>@Html.DisplayFor(model => model.Transmission)</p>
                                                    <p><i class="fa fa-check text-success me-3"></i><b class="text-danger">Body Style:</b>@Html.DisplayFor(model => model.Body)</p>

                                                    <a href="" class="btn btn-primary py-3 px-5 mt-3">Read More<i class="fa fa-arrow-right ml-3"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="tab-pane-3">
                                            <div class="row g-4">
                                                <div class="col-md-6" style="min-height: 350px;">
                                                    <div class="position-relative h-100">
                                                        <div class="row">


                                                            <div class="col text-center">
                                                                <a target="_blank" href="~/img/Car_Image/@ViewBag.img" alt="@ViewBag.img">
                                                                    <img class="img-fluid mb-1 " src="~/img/Car_Image/@ViewBag.img" alt="@ViewBag.img" style="width: 350px; height: auto;">
                                                                </a>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <h3 class="mb-3">@Html.DisplayFor(model => model.Brand) @Html.DisplayFor(model => model.Model) @Html.DisplayFor(model => model.Year)</h3>
                                                    <p class="mb-4">@Html.DisplayFor(model => model.Discription)</p>
                                                    <p><i class="fa fa-check text-success me-3"></i><b class="text-danger">Vehicle Style:</b>@Html.DisplayFor(model => model.Body)</p>
                                                    <p><i class="fa fa-check text-success me-3"></i><b class="text-danger">Transmission Type:</b>@Html.DisplayFor(model => model.Transmission)</p>
                                                    <p><i class="fa fa-check text-success me-3"></i><b class="text-danger">Kilometers Driven:</b>@Html.DisplayFor(model => model.Kilometers_Driven)</p>


                                                    <a href="" class="btn btn-primary py-3 px-5 mt-3">Read More<i class="fa fa-arrow-right ml-3"></i></a>
                                                </div>
                                            </div>


                                        </div>


                                        <div class="tab-pane fade" id="tab-pane-4">
                                            <div class="row g-4">
                                                <div class="col-md-6" style="min-height: 350px;">
                                                    <div class="position-relative h-100">
                                                        <div class="row">


                                                            <div class="col text-center">
                                                                <a target="_blank" href="~/img/Car_Image/@ViewBag.img" alt="@ViewBag.img">
                                                                    <img class="img-fluid mb-1 " src="~/img/Car_Image/@ViewBag.img" alt="@ViewBag.img" style="width: 350px; height: auto;">
                                                                </a>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <h3 class="mb-3">@Html.DisplayFor(model => model.Brand) @Html.DisplayFor(model => model.Model) @Html.DisplayFor(model => model.Year)</h3>
                                                    <p class="mb-4">@Html.DisplayFor(model => model.Discription)</p>
                                                    <p><i class="fa fa-check text-success me-3"></i><b class="text-danger">Engine Cylinders:</b>@Html.DisplayFor(model => model.Engine_CC)</p>
                                                    <p><i class="fa fa-check text-success me-3"></i><b class="text-danger">Engine Fuel Type</b>@Html.DisplayFor(model => model.Fuel)</p>


                                                    <a href="" class="btn btn-primary py-3 px-5 mt-3">Read More<i class="fa fa-arrow-right ml-3"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>






                </div>
            </div>






















        </div>
    </div>

</body>